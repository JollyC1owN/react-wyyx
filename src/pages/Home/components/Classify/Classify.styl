@import '../../../../common/stylus/mixins.styl'

.classify-container img
	width 100%
	height 370px
	margin-bottom 30px

.classify-list
	width 100%
	padding 0 30px 20px
	box-sizing border-box
	overflow hidden

	ul
		display flex
		flex-wrap nowrap

		li
			margin-right 20px

			img
				width 200px
				height 200px
				margin-bottom 10px
				background-color #F4F4F4

			.good-info
				span
					display block
					width 200px

				.good-price
					color $red
